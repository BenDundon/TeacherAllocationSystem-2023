<!DOCTYPE html>
<html>
  @!component('components.head', title="Teacher Allocation System")
  
  <body>
    <div class="wrapper">
      @include('partials/sidebar')
      <div class="content-section">
      <section class="main-content">
        {{--  Warning Message for Unallocated units  --}}
        <div>
          @if(unitsUnalloc > 0)
            @!component('components.unallocatedwarning', unitsUnalloc=unitsUnalloc)
          @endif
        </div>
        {{--  Title, Search Bar--}}
        <div class="level">
          <div>
            <h1 class="page-title">Allocations</h1>
            <h2 class="page-subtitle">Add and Search for Allocations</h2>
          </div>
                
        @!component('components.addallocation', csrf=csrfField(), academics=academicList, units=unitList, years=years)
        </div>


        @!component('components.searchAllocations', title="Find allocation", csrf=csrfField(), unitList=unitList, years=years, route=route('AllocationController.render'))


        <div>
          {{-- Display Allocations --}}
          @!component('components.displayallocations', csrf=csrfField(), allocAcademics=allocAcademics)
        </div>
      </section>
    </div>
    </div>
  </body>

</html> 
